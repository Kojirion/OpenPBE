FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (air water);

air
{
    diameterModel   PBEDiameter;
    PBEDiameterCoeffs
    {
        method methodOfClasses;
        MOCCoeffs
        {
            numberOfClasses 20;
            xi1 0.005;
        }
        coalescenceKernel noCoalescence;
        breakupKernel binaryBreakup;
        daughterParticleDistribution uniformBinaryBreakup;
        noCoalescenceCoeffs
        {}
        noBreakupCoeffs
        {}
        binaryBreakupCoeffs
        {}
        uniformBinaryBreakupCoeffs
        {}
    }
}


water
{
    diameterModel constant;
    constantCoeffs
    {
        d               1e-4;
    }
}

blending
{
    default
    {
        type            none;
        continuousPhase water;
    }
}

sigma
(
    (air and water)     0.07
);

aspectRatio
(
    (air in water)
    {
        type            constant;
        E0              1.0;
    }
);

drag
(
    (air in water)
    {
        type            SchillerNaumann;
        residualAlpha   1e-6;
        residualRe      1e-3;
        swarmCorrection
        {
            type        none;
        }
    }
);

virtualMass
(
    (air in water)
    {
        type            constantCoefficient;
        Cvm             0.5;
    }
);

heatTransfer
(
  (air in water)
    {
        type            RanzMarshall;
        residualAlpha   1e-4;
    }
);

lift
(
);

wallLubrication
(
);

turbulentDispersion
(
);

// Minimum allowable pressure
pMin            10000;


